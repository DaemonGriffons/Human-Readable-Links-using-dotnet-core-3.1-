@model HumanReadableLinks.Data.Product

@{
    ViewData["Title"] = Model.Name;
    var link= Context.Request.Scheme + "://" + Context.Request.Host + Context.Request.Path;
    var imageUrl = $"/api/Images/{Model.Image}";
}

<h1 class="text-center text-info">@ViewData["Title"]</h1>




<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card mb-3">
            <img src="@imageUrl" class="card-img-top" alt="@Model.Name Image" />
            <div class="card-body">
                <h5 class="card-title text-center">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
            </div>
            <div class="card-footer text-muted text-center">
                <small class="text-center">@Model.Price.ToString("c")</small>
            </div>
        </div>
    </div>
   
</div>
